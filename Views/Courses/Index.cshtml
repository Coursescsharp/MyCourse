<h1>Courses Catalog</h1>
@for(int i = 1; i <= 10; i++)
{
    <div class="row course">
        <div class="col-md-1">
            <img src="~/logo.svg" width="50">
        </div>
        <div class="col-md-5">
            <h2>Course title</h2>
            <author>Author name</author>
        </div>
        <div class="col-md-2 rating">
            <i class="fa fa-star" aria-hidden="true"></i>
            <i class="fa fa-star" aria-hidden="true"></i>
            <i class="fa fa-star" aria-hidden="true"></i>
            <i class="fa fa-star" aria-hidden="true"></i>
            <i class="fa fa-star" aria-hidden="true"></i>
        </div>
        <div class="col-md-2 price">
            EUR 10,99<br/><s>EUR 12,99</s>
        </div>
        <div class="col-md-2 d-flex align-items-center">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="5">Course details</a>
        </div>
    </div>
}

